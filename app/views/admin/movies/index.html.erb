<h1>Movie index</h1>
<%= link_to 'Add new movie', admin_movies_new_path, class: 'btn btn-success', role: 'button' %>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th class="col-md-6">Title</th>
    <th class="col-md-1">Rating</th>
    <th class="col-md-1">Created on</th>
    <th class="col-md-2">Added by user</th>
    <th class="col-md-1" colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
<% @movies.each do |movie| %>
    <tr>
      <td class="title"><%= movie.title %></td>
      <td class="rating"><%= movie.rating %></td>
      <td class="created_on"><%= movie.created_at.strftime("%F %H:%M") %></td>
      <td class="added_by">USER TODO</td>
      <td class="option"><%= link_to "View", admin_movie_path(movie),class: 'btn btn-primary btn-xs', role: 'button'  %></td>
      <td class="option"><%= link_to "Edit", edit_admin_movie_path(movie), class: 'btn btn-warning btn-xs', role: 'button' %></td>
      <td class="option"><%= link_to "Delete", admin_delete_movie_path(movie), class: 'btn btn-danger btn-xs', role: 'button'   %></td>
    </tr>
<% end %>
  </tbody>
</table>