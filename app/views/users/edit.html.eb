<%= form_for(@user) do |f| %>  
  <div class="field"> 
    <%= f.label :login %><br> 
    <%= f.text_area :login %>
    <%= f.label :email %><br> 
    <%= f.text_area :email %>
    <%= f.label :password %><br> 
    <%= f.text_area :password %>
    <%= f.label :confirm_password %><br> 
    <%= f.text_area :confirm_password %> 
  </div> 
  <div class="actions"> 
    <%= f.submit "Create" %> 
  </div> 
<% end %>