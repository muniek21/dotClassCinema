<h1>Listing playlists</h1>
<h1>Hello, Rails!</h1>
<!-- <%= link_to 'Playlisty', controller: 'playlists' %> -->
<%= link_to 'Nowa Playlista', new_playlist_path %>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @playlist.each do |playlist| %>
    <tr>
      <td><%= playlist.title %></td>
      <td><%= playlist.description %></td>
      <td><%= link_to 'Show', playlist_path(playlist) %></td>
      <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
      <td><%= link_to 'Destroy', playlist_path(playlist),
              method: :delete,
              data: { confirm: 'Do you want to remove?' } %></td>
    </tr>
  <% end %>
</table>
