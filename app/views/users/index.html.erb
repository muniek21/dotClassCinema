<h1>List of users</h1>
<%= link_to 'Add new user', new_user_path, class: 'btn btn-success', role: 'button' %>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th class="col-md-6">Login</th>
    <th class="col-md-1"></th>
    <th class="col-md-1">Created on</th>
    <th class="col-md-2">Added by user</th>
    <th class="col-md-1" colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
<% @users.each do |user| %>
    <tr>
      <td class="title"><%= user.login %></td>
      <td class="rating"><%= user.email %></td>
      <td class="created_on"><%= user.created_at.strftime("%F %H:%M") %></td>
      <td class="added_by">USER TODO</td>
      <td class="option"><%= link_to "View", user_path(user),class: 'btn btn-primary btn-xs', role: 'button'  %></td>
      <td class="option"><%= link_to "Edit", edit_user_path(user), class: 'btn btn-warning btn-xs', role: 'button' %></td>
      <td class="option"><%= link_to "Delete", destroy_user_path(user), class: 'btn btn-danger btn-xs', role: 'button'   %></td>
    </tr>
<% end %>
  </tbody>
</table>
